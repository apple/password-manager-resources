{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "additionalProperties": {
    "type": "object",
    "properties": {
      "password-rules": {
        "type": "string",
        "pattern": "^(minlength:\s*\d+;|maxlength:\s*\d+;|max-consecutive:\s*\d+;|required:\s*([a-z-]+|\[[^\]]+\])(,\s*([a-z-]+|\[[^\]]+\]))*;|allowed:\s*([a-z-]+|\[[^\]]+\])(,\s*([a-z-]+|\[[^\]]+\]))*;\s*)*$"
      }
    },
    "additionalProperties": false,
    "required": [
      "password-rules"
    ]
  }
}
